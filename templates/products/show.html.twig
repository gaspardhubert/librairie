{% extends "layout.html.twig" %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block content %}
<div class="row d-flex justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="row">
                <div class="col-md-6">
                    <div class="images p-3">
                        <div class="text-center p-4"> <img id="img-fluid" src="{{ asset('photosProducts/' ~ product.illustration)}}" width="250" /> </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="product p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span
                                    class="ml-1">Votre choix</span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                        </div>
                        <div class="mt-4 mb-3">

                            <h5>{{product.name}}</h5>
                            <div class="price d-flex flex-row align-items-center">
                                <span class="act-price"><h6>{{product.price|number_format(2)}} â‚¬</h6></span>
                            </div>
                        </div>
                    </div>
                    <div class="cart mt-4 align-items-center">
                        <a href="{{ path("panier_add", {id: product.id}) }}">
                            <button class="btn btn-danger text-uppercase mr-2 px-4">Ajouter au panier</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}